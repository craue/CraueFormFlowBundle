<?xml version="1.0" encoding="UTF-8" ?>
<phpunit
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
		backupGlobals="false"
		cacheResult="false"
		colors="true"
		failOnRisky="true"
		failOnWarning="true">
	<testsuites>
		<testsuite name="CraueFormFlowBundle">
			<directory suffix="Test.php">Tests</directory>
		</testsuite>
	</testsuites>
	<coverage>
		<include>
			<directory suffix=".php">.</directory>
		</include>
		<exclude>
			<directory suffix=".php">Tests</directory>
			<directory suffix=".php">vendor</directory>
		</exclude>
	</coverage>
	<!--
	<php>
		<env name="CACHE_DIR" value="/path/to/your/cache/" />
		<env name="LOG_DIR" value="/path/to/your/log/" />
		<env name="TEST_DB_FLAVOR_MYSQL_DSN" value="mysql://test:test@127.0.0.1/craue_form_flow_tests" />
		<env name="TEST_DB_FLAVOR_POSTGRESQL_DSN" value="pgsql://test:test@127.0.0.1/craue_form_flow_tests" />
		<env name="TEST_DB_FLAVOR_SQLITE_DSN" value="sqlite://memory" />
	</php>
	-->
	<listeners>
		<listener class="Symfony\Bridge\PhpUnit\SymfonyTestsListener" />
	</listeners>
</phpunit>
